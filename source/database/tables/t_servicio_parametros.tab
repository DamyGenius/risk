create table T_SERVICIO_PARAMETROS
(
  id_servicio   NUMBER(3) not null,
  nombre        VARCHAR2(100) not null,
  direccion     CHAR(1) not null,
  tipo_dato     CHAR(1) not null,
  formato       VARCHAR2(100),
  obligatorio   CHAR(1),
  valor_defecto VARCHAR2(1000),
  activo        CHAR(1)
)
;
comment on table T_SERVICIO_PARAMETROS
  is 'Parametros de Servicios Web';
comment on column T_SERVICIO_PARAMETROS.id_servicio
  is 'Identificador del servicio';
comment on column T_SERVICIO_PARAMETROS.nombre
  is 'Nombre del parametro';
comment on column T_SERVICIO_PARAMETROS.direccion
  is 'Direccion del parametro';
comment on column T_SERVICIO_PARAMETROS.tipo_dato
  is 'Tipo de dato del parametro';
comment on column T_SERVICIO_PARAMETROS.formato
  is 'Formato del parametro';
comment on column T_SERVICIO_PARAMETROS.obligatorio
  is 'El parametro es obligatorio? (S/N)';
comment on column T_SERVICIO_PARAMETROS.valor_defecto
  is 'Valor por defecto';
comment on column T_SERVICIO_PARAMETROS.activo
  is 'El parametro esta activo? (S/N)';
alter table T_SERVICIO_PARAMETROS
  add constraint PK_SERVICIO_PARAMETROS primary key (ID_SERVICIO, NOMBRE);
alter table T_SERVICIO_PARAMETROS
  add constraint FK_SERVICIO_PARAMETROS_SERVICIOS foreign key (ID_SERVICIO)
  references T_SERVICIOS (ID_SERVICIO);

