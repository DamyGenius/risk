create table T_SERVICIOS
(
  id_servicio            NUMBER(15) not null,
  nombre                 VARCHAR2(100),
  tipo                   VARCHAR2(1),
  activo                 VARCHAR2(1) default 'N' not null,
  dominio                VARCHAR2(30),
  detalle                VARCHAR2(2000),
  version_actual         VARCHAR2(10),
  cantidad_ejecuciones   NUMBER,
  fecha_ultima_ejecucion DATE
)
;
comment on table T_SERVICIOS
  is 'Servicios Web';
comment on column T_SERVICIOS.id_servicio
  is 'Identificador del servicio';
comment on column T_SERVICIOS.nombre
  is 'Nombre del servicio';
comment on column T_SERVICIOS.tipo
  is 'Tipo del servicio';
comment on column T_SERVICIOS.activo
  is 'El servicio esta activo? (S/N)';
comment on column T_SERVICIOS.dominio
  is 'Dominio del servicio';
comment on column T_SERVICIOS.detalle
  is 'Detalles adicionales del servicio';
comment on column T_SERVICIOS.version_actual
  is 'Version actual del servicio';
comment on column T_SERVICIOS.cantidad_ejecuciones
  is 'Cantidad de ejecuciones del servicio';
comment on column T_SERVICIOS.fecha_ultima_ejecucion
  is 'Fecha de la ultima ejecucion del servicio';
alter table T_SERVICIOS
  add constraint PK_SERVICIOS primary key (ID_SERVICIO);
alter table T_SERVICIOS
  add constraint UK_SER_NOMBRE_TIPO_DOMINIO unique (NOMBRE, TIPO, DOMINIO);
alter table T_SERVICIOS
  add constraint CK_SERVICIOS_ACTIVO
  check (ACTIVO IN ('S', 'N'));

