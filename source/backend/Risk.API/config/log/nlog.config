<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="Info" internalLogFile="C:\temp\nlog-internal.txt">

    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
        <add assembly="NLog.Telegram.NetStandart" />
    </extensions>

    <targets async="true">
        <target name="allFileTarget" xsi:type="File" fileName="C:\temp\nlog-all-${shortdate}.log" layout="${longdate}|${uppercase:${level}}|${logger}|${message}|${exception:format=tostring}" />
        <target name="ownFileTarget" xsi:type="File" fileName="C:\temp\nlog-own-${shortdate}.log" layout="${longdate}|${uppercase:${level}}|${logger}|${message}|${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
        <target name="telegramTarget" xsi:type="Telegram" botToken="1225505654:AAEmwMCUOoshRnjJwS12FxUszllA-GxWCm4" chatId="458268987" layout="${longdate}|${uppercase:${level}}|${logger}|${message}|${exception:format=tostring}" />
    </targets>

    <rules>
        <!-- All logs, including from Microsoft -->
        <logger name="*" minlevel="Trace" writeTo="allFileTarget" />

        <!-- Skip non-critical Microsoft logs, log only own logs -->
        <logger name="Microsoft.*" maxlevel="Info" final="true" /> <!-- BlackHole without writeTo -->
        <logger name="*" minlevel="Trace" writeTo="ownFileTarget" />
        <logger name="*" minlevel="Info" writeTo="telegramTarget" />
    </rules>

</nlog>